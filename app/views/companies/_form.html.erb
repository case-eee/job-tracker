<%= form_for @company, :html => {:class => "form-horizontal center"} do |f| %>
  <%= render partial: "shared/errors", locals: { target: @company } %>

  <div class="form-group">
    <%= f.label :name, class: "control-label" %>
    <%= f.text_field :name, class: "form-control", placeholder: "Company Name" %>
  </div>

  <div class="form-group submit-button">
    <%= f.submit "Submit", class: "btn btn-success btn-block" %>
  </div>
<% end %>
