<header>
  <h1><%= @company.name.upcase %></h1>
  <%= link_to "Edit", edit_company_path(@company) %>
  |
  <%= link_to "Delete", company_path(@company), method: :delete, data: {confirm: "Are you sure you want to delete this company and all jobs and contacts associated?"} %>
  <br />
  <br />
  <div> <%= link_to "Add a Job", new_company_job_path(@company) %> </div>
  <div> <%= link_to "Add a Contact", new_company_contact_path(@company) %> </div>
</header>

<br />
<br />

<h2>Jobs</h2>
<% @company.jobs.each do |job| %>
<div class="job-block">

    <div class="job-header">
      <div class="job_<%= job.id %>">
        <h3><%= link_to job.title, company_job_path(@company, job) %></h3>
        <%= link_to "Edit", edit_company_job_path(@company, job) %>
        |
        <%= link_to "Delete", company_job_path(@company, job), method: :delete, data: {confirm: "Are you sure you want to delete this job?"} %>
      </div>
      <div>
        <%= job.city %>
      </div>

    </div>

    <div class="job-body">
      <div>
        <strong>Description: </strong><%= job.description %>
      </div>
      <div>
        <strong>Level of Interest: </strong><%= job.level_of_interest %>
      </div>
      <div>
        <strong>Category: </strong><%= link_to job.category.title, category_path(job.category) %>
      </div>
      <div>
        <strong>Company: </strong><%= @company.name %>
      </div>
    </div>

</div>
<br />
<br />
<% end %>


<br />
<p>
  ___________________________________________________________________________
</p>
<br />
<h2>Contacts</h2>
<% @company.contacts.each do |contact| %>
<div class="contact-block">
  <div class="contact_<%= contact.id %>">
    <%= link_to "#{contact.first_name} #{contact.last_name}", company_contact_path(@company, contact) %><br />
    <%= link_to "Edit", edit_company_contact_path(@company, contact) %>
    |
    <%= link_to "Delete", company_contact_path(@company, contact), method: :delete, data: {confirm: "Are you sure you want to delete this contact?"} %>
  </div>
  <div>
    Position: <%= contact.position %>
  </div>
  <div>
    Email: <%= contact.email %>
  </div>
</div>
<br />
<br />
<% end %>
