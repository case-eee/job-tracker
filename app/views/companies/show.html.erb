All Jobs for <strong><%= @company.name %></strong>

<% @company.jobs.each do |job| %>
  <ul><%= job.title %></ul>
<% end %>
<% @company.contacts.each do |contact| %>
    <li><%= contact.full_name %> <br>
        <%= contact.position %> <br>
        <%= contact.email %></li>
  <% end %>

<%= render partial: '/contacts/form' %>

<%= link_to "Edit", edit_company_job_path, class: "button btn-edit" %>
<%= link_to "Delete", company_job_path, method: "delete", class: 'button btn-delete' %>
