<div class='container'>
  <div class="row">
    <div class="col-md-10">
      <h1>All Companies</h1>
      <table class="table">
        <tbody>
          <% @companies.each do |company| %>
            <tr>
              <td class=company_<%= company.id %>>
              <%= link_to company.name, company_jobs_path(company) %><br>
              <%= link_to "Edit", edit_company_path(company) %>
              <%= link_to "Delete", company_path(company), method: "delete" %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-2">
      <%= link_to new_company_path do %>
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      <% end %>
    </div>

    </div>
  </div>
