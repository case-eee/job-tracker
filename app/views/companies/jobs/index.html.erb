<h3>All Jobs for <strong><%= @company.name %></strong></h3>

<% @company.jobs.each do |job| %>
  <ul><%= link_to job.title, company_job_path(@company, job) %><br>
  <%= link_to "Edit", edit_company_job_path(@company, job) %>
  <%= link_to "Delete", company_job_path(@company, job), method: "delete" %>
</ul>
<% end %>

<h2><%= link_to "Add a new job", new_company_job_path(@company) %></h2>

<h3>Add a New Contact</h3>

<%= render partial: 'companies/contacts/form' %>
<%= render partial: 'companies/contact', collection: @company.contacts %>
