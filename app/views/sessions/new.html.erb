<div>
  <%= form_tag '/login' do %>
  <div class="form-group">
    <%=label_tag :user_name, "User Name"%>
    <%= text_field_tag :user_name%>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= text_field_tag :password%>
  </div>
  <div class="form-group">
    <%= submit_tag "Login" %>
  </div>
  <div class="form-group">
    <%= button_to "Create a new account", new_user_path, method: :get %>
  </div>
  <% end %>
</div>
