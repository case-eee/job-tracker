<%= form_for [@company, @contact], :html => {:class => "form-horizontal center"} do |f| %>
  <%= render partial: "shared/errors", locals: { target: @contact } %>

  <div class="form-group">
    <%= f.label :first_name, class: "col-md-4 control-label" %>
    <div class="col-md-4">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: "col-md-4 control-label" %>
    <div class="col-md-4">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :position, class: "col-md-4 control-label" %>
    <div class="col-md-4">
      <%= f.text_field :position, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "col-md-4 control-label" %>
    <div class="col-md-4">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>

  <%= f.submit "Submit", class: "btn btn-success" %>

<% end %>
