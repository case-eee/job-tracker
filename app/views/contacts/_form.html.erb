<div class="row">
  <div class="text-center">
    <h2>add a new contact</h2>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [ @company, @contact ] do |f| %>
      <div class="form-group">
        <%= f.text_field :name,
        class: "form-control",
          placeholder: :name %>
      </div>

      <div class="form-group">
        <%= f.text_field :position,
        class: "form-control",
          placeholder: :position %>
      </div>

      <div class="form-group">
        <%= f.text_field :email,
        class: "form-control",
          placeholder: :email %>
      </div>

      <div class="form-group">
        <%= f.submit 'Submit', class: "update-button" %>
      </div>

    <% end %>
  </div>
</div>
