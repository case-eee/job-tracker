<h1>Contacts</h1>
<%= link_to "Add a new contact", new_contact_path %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Company</th>
      <th>Position</th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
      <tr class="contact<%= contact.id %>">
        <td>
          <%= link_to contact.name, contact_path(contact), class: "table_name" %>
        </td>
        <td>
          <%= link_to contact.company_name, contact.company %>
        </td>
        <td><%= contact.position %></td>
      </tr>
    <% end %>
  </tbody>
</table>
