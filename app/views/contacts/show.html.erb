<div class="list-group">
  <div class="list-group-item">
    <h4 class="list-group-item-heading">Name</h4>
    <p class="list-group-item-text"><%= @contact.name %></p>
  </div>
  <div class="list-group-item">
    <h4 class="list-group-item-heading">Email</h4>
    <p class="list-group-item-text"><%= @contact.email %></p>
  </div>
  <div class="list-group-item">
    <h4 class="list-group-item-heading">Position</h4>
    <p class="list-group-item-text"><%= @contact.position %></p>
  </div>
  <div class="list-group-item">
    <h4 class="list-group-item-heading">Company</h4>
    <p class="list-group-item-text"><%= link_to @contact.company_name, @contact.company %></p>
  </div>
</div>
