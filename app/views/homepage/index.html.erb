<h1>Welcome to Job Tracker!</h1>

  <h3><%= link_to "All Companies", companies_path %></h3>
  <h3><%= link_to "All Categories", categories_path %></h3>

  <h3>Breakdown of jobs by level of interest (level_of_interest : instances):</h3>

  <% @jobs_by_interest.each do |breakdown| %>
    <%= breakdown + "," %>
  <% end  %>

  <h3>Top three companies in terms of level of interest:</h3>

  <% @rankings.each do |ranking| %>
    <%= ranking %><br/>
  <% end  %>

  <h3>Count of jobs by location:</h3>
  
  <% @jobs_by_location.each do |breakdown| %>
    <%= link_to breakdown, city_url(breakdown) %><br/>
  <% end  %>
