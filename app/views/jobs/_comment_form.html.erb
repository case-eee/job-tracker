<%= form_for [@company, @job, @comment], url: company_job_comments_path(@company, @job), :html => {:class => "form-horizontal"} do |f| %>
  <div class = "form-group">
    <%= f.label "New Comment", :class => "col-sm-2 control-label" %>
    <div class = "col-sm-10">
      <%= f.text_area :content, :class => "form-control" %>
    </div>
  </div>

  <div class = "form-group">
    <div class = "col-sm-offset-2 col-sm-10">
      <%= f.submit @page_setup.form[:submit_comment], :class => "btn btn-default" %>
    </div>
  </div>
<% end %>
