<h3 class="header2">All Jobs for <strong><%= @company.name %></strong></h3>

<table class="tableSection tableTwo">
  <caption class="newCompany">
    <%=link_to "New Job", new_company_job_path %><br/>
    <%=link_to "Companies", companies_path %>
  </caption>
  <tr><th>Job</th><th></th><th></th></tr>
  <% @jobs.each do |job| %>
    <tr class=job_<%= job.id %>>
      <td><%= link_to "#{job.title} at #{job.company.name}", company_job_path(@company, job) %></td>
      <td><%= link_to "Edit", edit_company_job_path(@company, job) %></td>
      <td><%= link_to "Delete", company_job_path(@company, job), method: "delete" %></td>
    </tr>
  <% end %>
</table>

 <div >
  <h3 class="header3">Contacts</h3>
  <table class="tableContact">
    <tr><th>Name</th><th>Position</th><th>Email</th><th>Company</th></tr>
    <% @company.contacts.each do |contact| %>
    <tbody class=contact_<%= contact.id %>>
      <tr>
        <td><%= contact.full_name %></td>
        <td><%= contact.position %></td>
        <td><%= contact.email %></td>
        <td><%= contact.company.name %></td>
      </tr>
    </body>
    <% end %>
  </table><br/>
</div>

<%= render partial: "contacts/form" %>
