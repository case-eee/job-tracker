<div class='container'>
Title: <%= @job.title %>
<br>

Description: <%= @job.description %>
<br>

Level of Interest: <%= @job.level_of_interest %>
<br>

City: <%= @job.city %>
<br>

Company: <%= link_to @job.company.name, company_path(@job.company) %>

Category: <%= link_to @job.category.name, category_path(@job.category) %>

<h4>Comments</h4>
<%= render partial: 'jobs/comment', collection: @job.comments.reverse %>

<div class="container">
<%= link_to "Delete this Job", company_job_path(@job.company, @job), method: :delete, class:"btn btn-danger" %><br><br>
<h4>Add a Comment</h4>
<p> Comments must have both an author and text </p>
<%= render partial: '/comments/comment_form' %>
</div>
</div>
