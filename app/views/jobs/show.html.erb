<strong>Title:</strong> <%= @job.title %><br />

<strong>Description:</strong> <%= @job.description %><br />

<strong>Level of Interest:</strong> <%= @job.level_of_interest %><br />

<strong>City:</strong> <%= @job.city %><br />

<strong>Category:</strong> <%= link_to @job.category.title, category_path(@job.category) %>

<strong>Company:</strong> <%= link_to @job.company.name, company_path(@job.company) %><br />
<%= link_to "Delete", company_job_path(@job.company, @job), method: :delete, class:"btn btn-danger" %>
<p><%= link_to "Edit", edit_company_job_path(@job.company, @job), class: "btn btn-success" %></p>
