<%= render partial: "shared/navbar" %>

<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Level of Interest</th>
        <th>City</th>
        <th>Company</th>
        <th>Category</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @job.title %></td>
        <td><%= @job.description %></td>
        <td><%= @job.level_of_interest %></td>
        <td><%= @job.city %></td>
        <td><%= link_to @job.company.name, company_path(@job.company) %></td>
        <td><%= link_to @job.category.title, category_path(@job.category) %></td>
      </tr>
    </tbody>
  </table>
  <div class="col-md-12 text-center">
    <button type="button" class= "btn btn-warning"><%= link_to "Edit", edit_company_job_path(@job.company, @job) %></button>
    <button type="button" class="btn btn-danger"><%= link_to "Delete", company_job_path(@job.company, @job), method: "DELETE" %></button>
  </div>

  <h3>Comments (<%= @job.comments.size %>)</h3>
  <%= render partial: 'jobs/comment', collection: @job.comments.reverse %>
  <%= render partial: "comments/form" %>
</div>
