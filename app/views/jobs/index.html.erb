All Jobs for <strong><%= @company.name %></strong></br>

<%= link_to "Add a job!", new_company_job_path %>

<% @jobs.each do |job| %>
  <ul class=job_<%= job.id %>>
    <%= link_to "#{job.title} at #{job.company.name}", company_job_path(@company, job) %>
    <%= link_to "Edit", edit_company_job_path(@company, job) %>
    <%= link_to "Delete", company_job_path(@company, job), method: "delete" %>
  </ul>
<% end %>

<h3>Contacts</h3>
<%= render partial: "jobs/contact", collection: @company.contacts %>
<%= render partial: "contacts/form" %>
