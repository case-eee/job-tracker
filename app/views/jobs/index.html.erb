<h4>Jobs for <strong><%= @company.name %></strong></h4>
<%= link_to "Add a job", new_company_job_path(@company) %>
<%= link_to "Add a contact", new_company_contact_path(@company) %>
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>View Contacts</th>
      <th>View Comments</th>
      <th>Add Comment</th>
      <th>Edit Job</th>
      <th>Delete Job</th>
    </tr>
  </thead>
  <tbody>
    <th scope="row" id="total entries"></th>
    <% @jobs.each do |job| %>
    <tr>
      <td><%= job.title %></td>
      <td><%= link_to "Contacts", company_contacts_path(job.company) %></td>
      <td><%= link_to "View Comments", company_job_comments_path(job.company,job) %></td>
      <td><%= link_to "Add a Comment", new_company_job_comment_path(job.company,job) %></td>
      <td><%= link_to "Edit", edit_company_job_path(job.company,job) %></td>
      <td><%= link_to "Delete", company_job_path(job.company_id, job), method: :delete, data: {confirm: "Are you sure?"}%></td>
    </tr>
    <% end %>
  </tbody>
</table>
