All Jobs for <strong><%= @company.name %></strong>

<% @jobs.each do |job| %>
  <ul id="job_#{job.id}"><%= link_to job.title, company_job_path(@company, job) %> at <%= job.company.name %></ul>
  <%= link_to "Edit", edit_company_job_path(@company, job), class: "btn btn-edit" %>
  <%= link_to "Delete", company_job_path(@company, job), method: "delete", class: 'btn btn-delete' %>
<% end %><br>
<%= link_to "Create a New Job", new_company_job_path(@company), class: "btn btn-create_new" %>
