All Jobs for <strong><%= @company.name %></strong>

<% @jobs.each do |job| %>
  <ul>
    <%= link_to "#{job.title}", company_job_path(@company, job) %> at <%= job.company.name %>
    <%= link_to "Edit", edit_company_job_path(@company, job) %>
    <button type="button" class="btn btn-danger">
    <%= link_to "Delete", company_job_path(@company, job), method: "delete" %>
    </button>
  </ul>
<% end %>
<br>
<button type="button" class="btn btn-secondary">
  <%= link_to 'Back', :back %>
</button>
<button type="button" class="btn btn-primary" name="button">
  <%= link_to "Companies", companies_path %>
</button>
