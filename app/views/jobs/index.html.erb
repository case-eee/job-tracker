<% if @location %>
    <h1>All Jobs in <strong><%= @location %></strong></h1>
    <h5><%= link_to "Sort Jobs by Interest Level", "/companies/#{@company.id}/jobs?location=#{@location}&sort=interest" %></h5>
      
      <%= render partial: "job" %>

<% else %>

  <h1 class="index-title">All Jobs at <strong><%= @company.name %></strong></h1>
  <div id="links" class="row">
    <div id="link" class="col-md-2">
      <h5><%= link_to "Sort Jobs by Location", "/companies/#{@company.id}/jobs?sort=location" %></h5>
    </div>
    <div id="link" class="col-md-2">
      <h5><%= link_to "Sort Jobs by Interest Level", "/companies/#{@company.id}/jobs?sort=interest" %></h5>
    </div>
    <div id="link" class="col-md-2">
      <h5><%= link_to "Create a New Job at #{@company.name}", new_company_job_path(@company) %></h5>
    </div>
  </div>
  </br></br>

  <% if @contacts.count > 0 %>
  <div class="contacts" >
  <h4>Contacts:</h4>
    <% @contacts.each do |contact| %>
      <h5><%= contact.full_name %></h5>
      <p><%= contact.position %></p>
      <p><%= contact.email %></p>
      <%= link_to "Delete", company_contact_path(@company, contact), method: :delete, data: {confirm: "Are you sure?"} %></br></br>
    <% end %>
  <% end %>
  </div>

  
  <%= render partial: "job" %>

  <div class="contact-form"><h4>Create a New Contact:
  <%= form_for([@company, @contact]) do |f| %></h4>
    <%= f.label :full_name %>
    <%= f.text_field :full_name %>

    <%= f.label :position %>
    <%= f.text_field :position %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.submit %>
<% end %></div>
<% end %>