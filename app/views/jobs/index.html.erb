<% if @location %>
    <h1>All Jobs in <strong><%= @location %></strong></h1>
    <h5><%= link_to "Sort Jobs by Company", "/companies/30/jobs?location=#{@location}&sort=company" %></h5>
      <h5><%= link_to "Sort Jobs by Interest Level", "/companies/30/jobs?location=#{@location}&sort=interest" %></h5>
      
      <%= render partial: "job" %>

<% else %>

  <h1>All Jobs at <strong><%= @company.name %></strong></h1>
  <h5><%= link_to "Sort Jobs by Location", "/companies/#{@company.id}/jobs?sort=location" %></h5>
  <h5><%= link_to "Sort Jobs by Interest Level", "/companies/#{@company.id}/jobs?sort=interest" %></h5>
  <h5><%= link_to "Create a New Job at #{@company.name}", new_company_job_path(@company) %></h5>

  <% if @contacts.count > 0 %>
    <div class="contacts">
    <h4>Contacts:</h4>
      <% @contacts.each do |contact| %>
      <h5><%= contact.full_name %></h5>
      <p>Position: <%= contact.position %></p>
      <p>Email: <%= contact.email %></p></br>
    <% end %>
  <% end %>
  </div>
  
  <%= render partial: "job" %>

  <div class="contact-form"><h4>Create a New Contact:
  <%= form_for([@company, @contact]) do |f| %></h4>
    <%= f.label :full_name %>
    <%= f.text_field :full_name %>

    <%= f.label :position %>
    <%= f.text_field :position %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.submit %>
<% end %></div>
<% end %>