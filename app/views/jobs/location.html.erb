<h1>Jobs by Location</h1>
<% @jobs_by_city.each_pair do |city, jobs| %>
  <h2><%= city %></h2>
  <% jobs.each do |job| %>
    <div class="job-block">

        <div class="job-header">
          <div>
            <h2> <%= link_to job.title, company_job_path(job.company, job) %> </h2>
            <%= link_to "Edit", edit_company_job_path(job.company, job) %>
            |
            <%= link_to "Delete", company_job_path(job.company, job), method: :delete, data: {confirm: "Are you sure you want to delete this job?"} %>
          </div>
          <div>
            <%= job.city %>
          </div>

        </div>

        <div class="job-body">
          <div>
            <%= job.description %>
          </div>
          <div>
            <%= job.level_of_interest %>
          </div>
          <div>
            <%= link_to job.category.title, category_path(job.category) %>
          </div>
          <div>
            <%= link_to job.company.name, company_path(job.company) %>
          </div>
        </div>

    </div>
    <br />
    <br />
  <% end %>



<% end %>
