<%= form_for [@company, @job], :html => {:class => "form-horizontal"} do |f| %>
  <div class = "form-group">
    <%= f.label :title, :class => "col-sm-2 control-label" %>
    <div class = "col-sm-10">
      <%= f.text_field :title, :class => "form-control" %>
    </div>
  </div>

  <div class = "form-group">
    <%= f.label :description, :class => "col-sm-2 control-label" %>
    <div class = "col-sm-10">
      <%= f.text_area :description, :class => "form-control" %>
    </div>
  </div>

  <div class = "form-group">
    <%= f.label :level_of_interest, :class => "col-sm-2 control-label" %>
    <div class = "col-sm-10">
      <%= f.number_field :level_of_interest, :class => "form-control" %>
    </div>
  </div>

  <div class = "form-group">
    <%= f.label :city, :class => "col-sm-2 control-label text-right" %>
    <div class = "col-sm-10">
      <%= f.text_field :city, :class => "form-control" %>
    </div>
  </div>

  <% if @form[:show_categories]%>
    <div class = "form-group">
      <%= f.label :category, :class => "col-sm-2 control-label text-right" %>
      <div class = "col-sm-10">
        <%= f.select :category_id, @categories.collect {|c| [c.title, c.id]}, {include_blank: "Select a Category"}, {:class => "form-control", :value => @job.category_id.to_i} %>
      </div>
    </div>
  <% end %>

  <div class = "form-group">
    <div class = "col-sm-offset-2 col-sm-10">
      <%= f.submit @form[:submit], :class => "btn btn-default" %>
    </div>
  </div>
<% end %>
