<%= form_for [@company, @job] do |f| %>
  <%= render partial: 'shared/errors', locals: {target: @job} %> 

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>

  <%= f.label :city %>
  <%= f.text_field :city %>
  
  <%= f.label :category %>
  <%= f.collection_select :category_id, Category.all, :id, :title, :prompt => 'Please Select Description' %>

  <%= f.label :company %>
  <%= f.collection_select :company_id, Company.all, :id, :name, :prompt => 'Please Select Company' %>

  <%= f.submit %>
<% end %>
