<%= form_for [@company, @job], :html => {:class => "form-horizontal"} do |f| %>
  <div class="container">
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :level_of_interest %>
      <%= f.number_field :level_of_interest, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :city %>
      <%= f.text_field :city, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :category %>
      <%= f.collection_select :category_id, Category.order(:title),:id,:title %>
      <button type="button" class= "btn btn-default"><%= link_to "Create a new category", new_category_path %></button>
    </div>
    <%= f.submit class: 'btn btn-default'%>
  </div>
<% end %>
