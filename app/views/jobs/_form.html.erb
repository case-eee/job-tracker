    <ul>
      <% @job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

<%= form_for [@company, @job] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>
  <br/>
  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>

  <%= f.label :city %>
  <%= f.text_field :city %>
  <br/>
  <%= f.label :job_category %>
  <%= f.collection_select :category_id, Category.order(:title), :id, :title, include_blank: false %>
  <br/>
  <br/>
  <%= f.submit %>
<% end %>
</div>
