<%= form_for [@company, @job] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest, min:1, max:10 %>
  <br>

  <%= f.label :city %>
  <%= f.text_field :city %>
  <br>

  <%= f.label :category_id %>
  <%= f.collection_select :category_id, Category.all, :id, :title %>
  <%= link_to "Create a category", new_category_path %>
  <br>

  <%= f.submit %>
<% end %>
