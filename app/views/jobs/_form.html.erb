<%= form_for [@company, @job] do |f| %>
<div class='container well'>
  <%= f.label :title %>
  <br>
  <%= f.text_field :title %>
  <br>
  <%= f.label :description %>
  <br>
  <%= f.text_field :description %>
  <br>
  <%= f.label :level_of_interest %>
  <br>
  <%= f.number_field :level_of_interest %>
  <br>
  <%= f.label :city %>
  <br>
  <%= f.text_field :city %>
  <br>
  <%= f.label :category %>
  <br>
  <%= f.collection_select :category_id, @categories, :id, :name, include_blank: true %>
</div>

<div class='container'>
  <%= f.submit %>
</div>
<% end %>
