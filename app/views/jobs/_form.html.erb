<%= form_for [@company, @job], :html => {:class => "form-horizontal center"} do |f| %>
  <%= render partial: "shared/errors", locals: { target: @job } %>

  <div class="form-group">
    <%= f.label :title, class: "col-md-4 control-label" %>
    <div class="col-md-4">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "col-md-4 control-label" %>
    <div class="col-md-4">
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :level_of_interest, class: "col-md-4 control-label" %>
    <div class="col-md-4">
      <%= f.number_field :level_of_interest, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :city, class: "col-md-4 control-label" %>
    <div class="col-md-4">
      <%= f.text_field :city, class: "form-control" %>
    </div>
  </div>

  <div class="form-group center">
    <%= f.label "Category", class: "col-md-4 control-label" %>
    <div class="col-md-4">
      <%= f.select :category_id, Category.all.map {|c| [c.title, c.id]}, class: "form-control" %>
    </div>
  </div>

  <%= f.submit "Submit", class: "btn btn-success" %>

<% end %>
