<% if @error %>
    <h2><%= pluralize(@error.count, "error") %>
        prohibited this record from being saved:</h2>
    <ul>
      <% @error.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>

<%= form_for [@company, @job] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>

  <%= f.label :city %>
  <%= f.text_field :city %>
  <% if Category.count > 0 %>
    <%= f.label :category %>
    <%= f.collection_select :category_id, Category.all, :id, :title, :prompt => "Select a category" %>
  <% else %>
    <h5>No categories to choose from, <%= link_to "create category", new_category_path %></h5>
  <% end %>
  <%= f.submit %>
<% end %>
