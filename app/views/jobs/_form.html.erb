<%= form_for [@company, @job] do |f| %>
<div class='container'>
  <div class='list-group'>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
</div>

<div class='container'>
  <div class='list-group'>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
</div>

<div class='container'>
  <div class='list-group'>
    <%= f.label :level_of_interest %>
    <%= f.number_field :level_of_interest %>
  </div>
</div>
<div class='container'>
  <div class='list-group'>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
</div>
<div class='container'>
  <div class='list-group'>
    <%= f.label :category %>
    <%= f.collection_select :category_id, @categories, :id, :name, include_blank: true %>
  </div>
</div>
<div class='container'>
  <%= f.submit %>
</div>
<% end %>
