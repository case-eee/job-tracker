<%= form_for [@company, @job] do |f| %>
  <%= render partial: "shared/errors", locals: { target: @job } %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>

  <%= f.label :category %>
  <%= f.collection_select :category_id, Category.all,:id,:title, include_blank: true %>

  <%= f.label :tag_list %>
  <%= f.text_field :tag_list %>

  <%= f.submit %>
<% end %>
