<%= form_for [@company, @job] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.collection_select :category_id, @categories.order(:id),:id,:title, options = {:prompt => "Category"}%></p>
  <p><%= link_to "Don't see your Cateogry?", new_category_path, class: "btn btn-create_new" %></p>

  <%= f.submit %>

<% end %>
