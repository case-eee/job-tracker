<div class="new-job" id="form"><%= form_for [@company, @job] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>

  <%= f.collection_select :category_id, Category.all, :id, :title %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.submit %>
<% end %></form></div></br>

<div id="new-link" class="blurb"><%= link_to "Create a New Category", new_category_path %></div>
