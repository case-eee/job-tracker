<%= form_for [@company, @job] do |f| %>
  <%= render partial: 'shared/errors', locals: {target: @job} %> 

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :level_of_interest %>
    <%= f.number_field :level_of_interest, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :city %>
    <%= f.text_field :city, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :category %>
    <%= f.collection_select :category_id, Category.all, :id, :title, :prompt => 'Please Select Description' %>
  </div>

  <div class="form-group">
    <%= f.label :company %>
    <%= f.collection_select :company_id, Company.all, :id, :name, :prompt => 'Please Select Company', class: "form-control" %>
  </div>

  <%= f.submit class: "btn btn-primary" %>

<% end %>
