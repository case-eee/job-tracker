<div class="col-md-6">

<h3>Jobs by Location</h3>

<% @sorted.keys.each do |location| %>
  <h4><%= location %>:</h4>
  <ul>
    <% Job.where(city: location).each do |job| %>
    <li><%= link_to job.title, company_job_path(job.company, job) %></li>
    <% end %>
  </ul>
<% end %>

<%= link_to "Back", :back, class: "btn btn-secondary" %>
<%= link_to "All Companies", companies_path, class:"btn btn-primary" %>

</div>
