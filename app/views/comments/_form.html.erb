<div class='container'>
  <h3>Post a Comment</h3>
  <h5>Comments Require an author and content to be submitted.</h5>
</div>
<div class='container'>
<%= form_for [@company, @job, @comment] do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author %>

  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.submit %>
<% end %>
</div>
