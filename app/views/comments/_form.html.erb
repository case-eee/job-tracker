<div class='container'>
  <h3>Post a Comment</h3>
  <h5>Comments Require an author and content to be submitted.</h5>
</div>
<div class='container'>
<%= form_for [@company, @job, @comment] do |f| %>
<div class'container'>
  <%= f.label :author %>
  <%= f.text_field :author %><br><br>

  <%= f.label :content %><br>
  <%= f.text_area :content, size: "30x5" %>
</div>
  <%= f.submit %>
<% end %>
</div>
