<h3>Title:<%= @job.title%></h3>
<div>
  <%= @job.comments.each do |comment| %>
  <%= link_to comment.id, company_job_path(@job.company, @job) %>
  <%= comment.content %>
  <% end %>
</div>
<h2>
  <b>Name:</b><%= @job.company.name %>
</h2>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Content</th>
      <th>Created at</th>
      <th>Edit Comment</th>
      <th>Delete Comment</th>
    </tr>
  </thead>
  <tbody>
    <th scope="row" id="total entries"></th>
    <% @job.comments.each do |comment| %>
    <tr>
      <td><%= comment.content %></td>
      <td><%= link_to "Add a Comment", new_company_job_comment_path(@job.company,@job) %></td>
      <td><%= link_to "Edit", edit_company_job_comment_path(@job.company,@job,comment) %></td>
      <td><%= link_to "Delete", company_job_comment_path(@job.company, @job,comment), method: :delete, data: {confirm: "Are you sure?"}%></td>
    </tr>
    <% end %>
  </tbody>
</table>
