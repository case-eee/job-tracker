<% if @errors %>
  <h2><%= pluralize(@errors.count, "error") %>
      prohibited this record from being saved:</h2>
  <ul>
    <% @errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
  </ul>
<% end %>

<h1>Create a new category!</h1>

<%= form_for @category do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.submit %>
<% end %>
