<h1><%= @category.title.upcase %></h1>
<%= link_to "Edit", edit_category_path(@category) %>
|
<%= link_to "Delete", category_path(@category), method: :delete, data: {confirm: "Are you sure you want to delete this category?"} %>

<br />
<br />

<h2>Jobs</h2>
<% @category.jobs.each do |job| %>
<div class="job-block">

    <div class="job-header">
      <div>
        <h3><%= link_to job.title, company_job_path(job.company, job) %></h3>
        <%= link_to "Edit", edit_company_job_path(job.company, job) %>
        |
        <%= link_to "Delete", company_job_path(job.company, job), method: :delete, data: {confirm: "Are you sure you want to delete this job?"} %>
      </div>
      <div>
        <%= job.city %>
      </div>

    </div>

    <div class="job-body">
      <div>
        <strong>Description: </strong><%= job.description %>
      </div>
      <div>
        <strong>Level of Interest: </strong><%= job.level_of_interest %>
      </div>
      <div>
        <strong>Category: </strong><%= job.category.title %>
      </div>
      <div>
        <strong>Company: </strong><%= link_to job.company.name, company_path(job.company) %>
      </div>
    </div>

</div>
<br />
<br />
<% end %>
