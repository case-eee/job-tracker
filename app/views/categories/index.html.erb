<header>
  <h1>All Categories</h1>
  <div class="dashboard-link"> <%= link_to "Job Dashboard", categories_path %> </div>
  <div> <%= link_to "Companies", companies_path %> </div>
  <div> <%= link_to "Add Category", new_category_path %> </div>
</header>

<br />
<br />

<% @categories.each do |category| %>
  <%= link_to category.title.upcase, category_path(category) %>
  <%= link_to "EDIT", edit_category_path(category) %>
  <%= link_to "DELETE", category_path(category), method: :delete, data: {confirm: "Are you sure you want to delete this category?"} %>
  <br />
  <br />
<% end %>
