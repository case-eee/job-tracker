<h2>
  <h3>All Categories</h3>
  <% if @user.admin? %>
    <td><%= link_to "Add a new category", new_category_path%></td>
  <% end %>
</h2>
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Total Jobs</th>
      <th>Edit Company</th>
      <th>Delete Company</th>
    </tr>
  </thead>
  <tbody class="categories">
    <th scope="row" id="total entries"></th>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td><%= link_to category.jobs.count, category_path(category) %></td>
        <td><%= button_to "Edit", edit_category_path(category), method: :get %></td>
        <td><%= button_to "Delete", category_path(category), method: :delete, data: {confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
