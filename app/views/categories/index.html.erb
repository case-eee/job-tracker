<div class="col-md-3"></div>
<div class="col-md-6">
  <h2>All Categories</h2>

  <% @categories.each do |category| %>
    <ul>
      <h3><%= category.title %>
        <%= link_to "Edit", edit_category_path(category) %>
        <%= link_to "Delete", category_path(category), method: :delete %>
      </h3>
    </ul>
  <% end %>
</div>
