<div class="col-md-3"></div>
<div class="col-md-6">
  <h2>All Categories</h2>
<ul>
  <% @categories.each do |category| %>
      <li><%= link_to "#{category.title}", category_path(category), class: "btn btn-primary btn-md" %>
        <%= link_to "Edit", edit_category_path(category), class: "btn btn-info btn-sm" %>
        <%= link_to "Delete", category_path(category), method: :delete, class: "btn btn-danger btn-sm" %>
      </li><br/>
  <% end %>
</ul>
<%= link_to "Back", :back, class: "btn btn-secondary" %>
<%= link_to "All Companies", companies_path, class: "btn btn-primary" %>
</div>
<div cass="col-md-3"></div>
