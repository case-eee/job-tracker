<div class='container'>
  <h1>All Categories</h1>

  <div class="row">
    <div class="col-md-10">
      <table class="table">
        <tbody>
        <% @categories.each do |category| %>
          <tr>
          <td class=category_<%= category.id %>>
            <%= link_to category.title, category_path(category) %><br>
            <%= link_to "Edit", edit_category_path(category) %>
            <%= link_to "Delete", category_path(category), method: "delete" %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="col-md-2">
    <h2><%= link_to "Add a new category", new_category_path %></h2>
  </div>

  </div>
</div>
