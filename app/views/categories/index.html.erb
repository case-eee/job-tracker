<div class='container'>
  <h1>Jobs in the following Categories:</h1><br>
</div>
  <div class=' container well'>
    <% @categories.each do |category| %>
 
        <h3><strong><%= link_to category.name, category_path(category) %></strong></h3>
        <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-warning btn-xs' %>
        <%= link_to 'Delete', category_path(category), method: :delete, class: 'btn btn-danger btn-xs' %>
        <% end %>
      
    </div>
  
<div class='container'>
<%= link_to 'Add Category', new_category_path, class: 'btn btn-success' %>
</div>