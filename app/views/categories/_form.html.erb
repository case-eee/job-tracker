<%= form_for @category, :html => {:class => "form-horizontal center"} do |f| %>
  <%= render partial: "shared/errors", locals: { target: @category } %>

  <div class="form-group">
    <%= f.label :title, class: "control-label" %>
    <%= f.text_field :title, class: "form-control", placeholder: "Category Title" %>
  </div>

  <div class="form-group submit-button">
    <%= f.submit "Submit", class: "btn btn-success btn-block" %>
  </div>
<% end %>
