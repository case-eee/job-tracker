<div id="sources" role="navigation">
  <div class='col-md-12 navbar navbar-default navbar-fixed-top'>
    <a href='/' class='navbar-brand'>Job Tracker</a>
    <ul class='nav navbar-nav navbar-right'>

      <li class='dropwdown'>
        <a href = '#' class='dropdown-toggle' data-toggle='dropdown'>Create New
          <span class="caret"></span></a>
          <ul class='dropdown-menu'>
            <li><%= link_to "New Company", new_company_path %></li>
            <li><%= link_to "New Category", new_category_path %></li>
            <li><%= link_to "New Tag", new_tag_path %></li>
          </ul>
        </li>

      <li class='dropwdown'>
        <a href = '#' class='dropdown-toggle' data-toggle='dropdown'>View All
          <span class="caret"></span></a>
